#include<stdio.h>
int main() {
    int pcode1,unit1, pcode2, unit2;
    double price1, price2, value;

    scanf("%d %d %lf",&pcode1,&unit1,&price1);
    scanf("%d %d %lf",&pcode2,&unit2,&price2);

    value=(unit1*price1)+(unit2*price2);

    printf("VALOR A PAGAR: R$ %0.2lf\n",value);
    return 0;

}
